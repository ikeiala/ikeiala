
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="/javascripts/addbutton.js"></script>

  <p>El día de hoy: {{dayTitle}}</p>

  <menu>
    <li><a href="#movies">Estrenos de cine</a></li>
    <li><a href="#series">Nuevos episodios de series</a></li>
    <li><a href="#games">Lanzamientos en videojuegos</a></li>

  </menu>


   

  <div class="day">

    <div class="container-wiki" id="#wiki">
      <img src={{wiki.img}}>
        <ul>
          <h2>EFEMÉRIDES DEL DÍA</h2>
          {{#each wiki.wikis}}
            <li><strong>{{this.year}}</strong>: {{this.description}} <a href={{this.link}}>Leer más</a></li>
          {{/each}}
        </ul>
    </div>

    {{#each tuits}}
      {{> tuitPartial this}}
    {{/each}}

    <h2 class="series"> <i class="fas fa-tv series"> </i> NUEVOS EPISODIOS DE SERIES</h2>
    <div class="container" id="#series">
    {{#each series}}
    <article class="serie partial">{{> seriesPartial this}}
    <button onclick="addEvent(`{{../dayTitle}}`,`{{id}}`,`series`)"><i class="far fa-plus-square"></i> AÑADIR A FAVORITOS</button>
    </article>
    {{/each}}
    </div>


    <h2 class="movies"> <i class="fas fa-film movies"> </i> ESTRENOS DE CINE</h2>
    <div class="container" id="#movies">
      {{#each movies}}
        <article class="movie partial">{{> moviePartial this}}
        <button onclick="addEvent(`{{../dayTitle}}`,`{{id}}`,`movies`)"><i class="far fa-plus-square"></i> AÑADIR A FAVORITOS</button>
      </article>
      {{/each}}
    </div>

    <h2 class="games"> <i class="fas fa-gamepad games"> </i> LANZAMIENTOS EN VIDEOJUEGOS</h2>
    <div class="container-row" id="#games">
    {{#each games}}
    <article class="game partial partial-game">{{> gamePartial this}}
    <button onclick="addEvent(`{{../dayTitle}}`,`{{id}}`,`games`)"><i class="far fa-plus-square"></i> AÑADIR A FAVORITOS</button>
    </article>
    {{/each}}
    

    <hr>
    <h1 id="commentlist">COMMENTS</h1>

    {{#each comments}}
    {{> commentPartial }}
    {{/each}}

    {{#if user}}
    <hr>
    <h1>ADD A NEW COMMENT:</h1>
    <label>Text: <textarea id="textcomment" cols="50" name="text"
        placeholder="¿Qué quieres decir?"></textarea></label><br><br>
    <button onclick="addComment(`{{id}}`)">Enviar</button>
    {{/if}}

</div>
</div>