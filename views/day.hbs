
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/addbutton.js"></script>

<p>El día de hoy: {{dayTitle}}</p>

<h1>MOVIES</h1>

{{#each movies}}
  {{> moviePartial this}}
  <button onclick="addEvent(`{{../dayTitle}}`,`{{id}}`,`movies`)">Add</button>
{{/each}}

<h1>SERIES</h1>

{{#each series}}
  {{> seriesPartial this}}
  <button onclick="addEvent(`{{../dayTitle}}`,`{{id}}`,`series`)">Add</button>
{{/each}}

{{#each tuits}}
  {{> tuitPartial this}}
{{/each}}

<div>
  <img src={{wiki.img}}>
  <ul>
  {{#each wiki.wikis}}
    <li>{{this.year}}: {{this.description}}</li>
    <p><a href={{this.link}}>Leer más</a></p>
  {{/each}}
  </ul>
 
</div>

<h1>GAMES</h1>

{{#each games}}
  {{> gamePartial this}}
  <button onclick="addEvent(`{{../dayTitle}}`,`{{id}}`,`games`)">Add</button>
{{/each}}

<hr>
<h1 id="commentlist">COMMENTS</h1>

{{#each comments}}
  {{> commentPartial }}
{{/each}}

{{#if user}}
<hr>
<h1>ADD A NEW COMMENT:</h1>
<label>Text: <textarea id="textcomment" cols="50" name="text" placeholder="¿Qué quieres decir?"></textarea></label><br><br>
<button onclick="addComment(`{{id}}`)">Enviar</button>
{{/if}}

